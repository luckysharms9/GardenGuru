<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_garden_specs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sharmy.gardenguru.GardenSpecs">

    <TextView
        android:text="Location: Kitchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        tools:text="Location: Kitchen"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:text="Garden Name: Tomato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        tools:text="Garden Name: Tomato"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <ImageButton
        android:src ="@drawable/gguru"
        android:id="@+id/imageButton"
        android:background="@android:color/background_light"
        android:layout_marginStart="17dp"
        android:scaleType="fitEnd"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="Information"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:textAlignment="textStart"
        android:layout_marginTop="17dp"
        android:textColor="@android:color/black"
        tools:text="Information"
        android:layout_height="100dp"
        android:layout_width="500dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginStart="35dp" />

    <TextView
        android:text="Tomato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        tools:text="Tomato"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="36dp"
        android:layout_below="@+id/textView11"
        android:layout_toEndOf="@+id/imageButton" />

    <TextView
        android:text="Plants in Garden:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        tools:text="Plants in Garden:"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <android.support.design.widget.TabLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.TabItem
            android:text="My Garden"
            android:icon="@drawable/ic_action_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/myText"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:forceHasOverlappingRendering="true" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tabItem"
            android:text="Plants"
            android:icon="@drawable/ic_action_name" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inspire Me"
            android:icon="@drawable/ic_action_name_light" />

        <android.support.design.widget.TabItem
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Weather"
            android:icon="@drawable/ic_action_name_sun" />
    </android.support.design.widget.TabLayout>


</RelativeLayout>
