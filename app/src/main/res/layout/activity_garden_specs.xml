<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_garden_specs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sharmy.gardenguru.GardenSpecs">

    <android.support.design.widget.TabLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:tabGravity="fill">

        <android.support.design.widget.TabItem
            android:text="My Garden"
            android:icon="@drawable/my_garden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myText"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:forceHasOverlappingRendering="true" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tabItem"
            android:text="Plants"
            android:icon="@drawable/ic_action_name" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inspire Me"
            android:icon="@drawable/ic_action_name_light" />

        <android.support.design.widget.TabItem
            android:layout_height="wrap_content"
            android:text="Weather"
            android:icon="@drawable/ic_action_name_sun" />
    </android.support.design.widget.TabLayout>

    <ImageButton
        android:src ="@drawable/gguru"
        android:id="@+id/imageButton"
        android:background="@android:color/background_light"
        android:layout_marginStart="14dp"
        android:scaleType="fitEnd"
        android:layout_width="75dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="75dp" />

    <Button
        android:text="Edit Garden"
        android:background="@drawable/drawablehome_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/button11"
        tools:text="  Edit Garden  "
        android:lineSpacingExtra="8sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginTop="7dp" />

    <TextView
        android:text="Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        tools:text="Information"
        android:textSize="40sp"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:layout_marginBottom="14dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/black"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Location: Kitchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        tools:text="Location:   Kitchen"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageButton" />

    <TextView
        android:text="Plants in Garden:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        tools:text="Plants in Garden:"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:text="Garden Name: Tomato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        tools:text="Garden Name: Tomato"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <Button
        android:text="Tomato"
        android:id="@+id/buttonT"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        tools:text="Tomato"
        android:typeface="normal"
        android:textAllCaps="false"
        android:layout_width="120dp"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:layout_height="50dp" />


</RelativeLayout>
