<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_garden"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sharmy.gardenguru.AddGarden">

    <EditText
        android:layout_height="50dp"
        android:background="@drawable/drawablehome_button"
        android:inputType="textPersonName"
        android:text="  Enter Name Here"
        android:ems="10"
        android:id="@+id/editText"
        android:fontFamily="casual"
        android:singleLine="true"
        android:layout_width="300dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:layout_width="300dp"
        android:background="@drawable/drawablehome_button"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="  Eg. Front Yard"
        android:ems="10"
        android:id="@+id/editText3"
        android:fontFamily="casual"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="Garden Location:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="22sp"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <TextView
        android:text="Garden Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="22sp"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/AddGardenTitle"
        android:layout_alignStart="@+id/imageButton2" />

    <android.support.design.widget.TabLayout
        android:layout_marginTop="50dp"
        android:layout_height="75dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        app:tabGravity="center"
        android:layout_width="375dp"
        app:tabMode="scrollable">

        <android.support.design.widget.TabItem
            android:text="My Garden"
            android:icon="@drawable/ic_action_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myText"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:forceHasOverlappingRendering="true"
            android:onClick="Main2Activity" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tabItem"
            android:text="Plants"
            android:icon="@drawable/ic_action_name"
            android:onClick="Main3Activity" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inspire Me"
            android:icon="@drawable/ic_action_name_light"
            android:onClick="InspirationWall" />

        <android.support.design.widget.TabItem
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Weather"
            android:icon="@drawable/ic_action_name_sun"
            android:onClick="Weather" />
    </android.support.design.widget.TabLayout>

    <TextView
        android:text="Add Garden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddGardenTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        tools:text="Add Garden"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:textSize="40sp" />

    <ImageButton
        android:src="@drawable/gguru"
        android:id="@+id/imageButton2"
        android:background="@android:color/background_light"
        android:scaleType="fitEnd"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="75dp"
        android:layout_height="75dp" />

    <Button
        android:text="Save"
        android:background="@drawable/drawablehome_button"
        android:id="@+id/button2"
        android:fontFamily="casual"
        android:onClick="buttonSavedGarden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:layout_marginTop="13dp" />


</RelativeLayout>
